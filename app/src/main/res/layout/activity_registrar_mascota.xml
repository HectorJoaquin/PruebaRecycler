<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.RegistrarMascotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#537b9e">

        <TextView
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registar Mascota"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15sp"/>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <EditText
                android:id="@+id/etNombreRegistarMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0A384A"
                android:background="@drawable/ediciontxt"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:hint="Nombre Mascota"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <EditText
                android:id="@+id/etRazaRegistarMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0A384A"
                android:background="@drawable/ediciontxt"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:hint="Raza Mascota"/>
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#4868d9">

            <TextView
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DueÃ±o"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="5dp">

                <Spinner
                    android:id="@+id/spinnerConsultaMascota"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                </Spinner>

            </android.support.v7.widget.CardView>

        </LinearLayout>


        <Button
            android:id="@+id/btnGuardarMascota"
            android:textColor="#fff"
            android:background="@drawable/boton_presionado"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR MASCOTA"
            />







    </LinearLayout>


</android.support.constraint.ConstraintLayout>